<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="goods.lqb.com.goodsshop">

    <uses-permission
            android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
            android:name="android.permission.READ_CONTACTS"/>
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission
            android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <!-- 添加WiFi以及访问网络的权限： -->
    <uses-permission
            android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission
            android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission
            android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission
            android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission
            android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/main_icon"
            android:label="好购"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:theme="@style/AppTheme.NoActionBar"
                android:screenOrientation="portrait"
                android:name=".act.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category
                        android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name="goods.lqb.com.goodsshop.act.DetailAct"
                android:label="@string/title_activity_detai"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name="goods.lqb.com.goodsshop.act.SearchGoogsAct"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <receiver
                android:name="goods.lqb.com.goodsshop.netUtils.DownLoadApkReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>